@model AuthorDto
@{
    ViewData["Title"] = "Create";
}

<section class="create-author-container">
    <h2>Add New Author</h2>
    <form asp-action="Create" method="POST" enctype="multipart/form-data" class="create-author-form">
        <div class="form-group">
            <label asp-for="Name">Author Name</label>
            <input type="text" id="authorName" name="Name" required>
        </div>

        <div class="form-group">
            <label asp-for="About">About the Author</label>
            <textarea id="authorAbout" name="About" rows="5" required></textarea>
        </div>

        <div class="form-group">
            <label asp-for="PhotoFile">Upload Author Photo</label>
            <input asp-for="PhotoFile" id="authorPhoto" accept="image/*" >
        </div>

        <div class="form-group">
            <button type="submit" class="btn">Add Author</button>
        </div>
    </form>
</section>

