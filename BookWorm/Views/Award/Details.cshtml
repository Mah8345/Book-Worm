@model Award
@{
    ViewData["Title"] = "Details";
}

<div class="author-details">
    <div class="author-image">
        <img src="@(Model.AwardPhoto?.FilePath ?? "/images/AuthorDefault.jpeg")" alt="Author Name">
    </div>
    <div class="author-info">
        <h2 class="author-name">@Model.Name</h2>
        <p class="author-about">
            @Model.About
        </p>
    </div>
</div>
<div class="author-books">
    <h4 >Books which Won this Award</h4>
    <partial name="_BookCardListPartial" model="Model.AwardedBooks"/>
</div>